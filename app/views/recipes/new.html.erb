<h1>New Recipe</h1>
<%= form_tag "/recipes", method: :post do %>
  <div class="form-group">
    Title: <input type="text" class="form-control" name="form_title">
  </div>
  <div class="form-group">
    Chef: <input type="text" class="form-control" name="form_chef">
  </div>
  <div class="form-group">
    Ingredients: <input type="text" class="form-control" name="form_ingredients">
  </div>
  <div class="form-group">
    Directions: <input type="text" class="form-control" name="form_directions">
  </div>
  <input type="submit" class="btn btn-default" value="Create recipe">
<% end %>
